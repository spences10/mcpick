{
	"name": "mcpick",
	"version": "0.0.2",
	"description": "Dynamic MCP server configuration manager for Claude Code",
	"type": "module",
	"main": "./dist/index.js",
	"bin": {
		"mcpick": "./dist/index.js"
	},
	"engines": {
		"node": ">=22.0.0"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"start": "node ./dist/index.js",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "pnpm run build && changeset publish"
	},
	"keywords": [
		"claude",
		"mcp",
		"cli",
		"configuration",
		"claude-code"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"valibot": "^1.1.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.7",
		"@types/node": "^24.5.2",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2"
	}
}
